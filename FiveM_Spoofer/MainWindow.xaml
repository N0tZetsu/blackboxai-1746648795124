<Window x:Class="FiveM_Spoofer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="007 Spoofer" Height="450" Width="800"
        Background="#FF001F2D" 
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
            <TextBlock Text="PRODUCT" Foreground="LightGray" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
            <TextBlock Text=" â€¢ " Foreground="Red" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="5,0"/>
            <TextBlock Text="FIVEM" Foreground="LightGray" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>
            <TextBlock Text="2.1.6" Foreground="LightGray" FontWeight="Bold" FontSize="14" VerticalAlignment="Center" Margin="20,0,0,0"/>
            <Button Content="X" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" Foreground="LightGray" BorderBrush="Transparent" FontWeight="Bold" Click="CloseButton_Click"/>
        </StackPanel>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="007 SPOOFER" Foreground="#7FFFD4" FontWeight="Bold" FontSize="36" HorizontalAlignment="Left" Margin="0,40,0,20" />

        <!-- Buttons -->
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Left" Width="200" VerticalAlignment="Top" >
            <Button x:Name="SpoofButton" Content="SPOOF" Height="50" Margin="0,0,0,10" Background="#7FFFD4" Foreground="Black" FontWeight="Bold" Click="SpoofButton_Click"/>
            <Button x:Name="CleanerButton" Content="CLEANER" Height="50" Background="#7FFFD4" Foreground="Black" FontWeight="Bold" Click="CleanerButton_Click"/>
        </StackPanel>

        <!-- Status Panel -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0" >
            <StackPanel Margin="0,0,40,0">
                <TextBlock Text="EXPIRY" Foreground="LightGray" FontWeight="Bold" FontSize="12"/>
                <TextBlock Text="12/02/35" Foreground="LightGray" FontSize="12"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="STATUS" Foreground="LightGray" FontWeight="Bold" FontSize="12"/>
                <TextBlock Text="Working" Foreground="LightGray" FontSize="12"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
